<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Table Modification</title>
</head>
<style>
  td {
    width: 100px;
    height: 100px;
    border: 1px solid black;
    background-color: rgb(255, 255, 255);
  }

  table {
    border: 1px solid black;
  }

  .btn {
    width: 25px;
    height: 25px;
    text-align: center;
    cursor: pointer;
    background-color: rgb(16, 4, 253);
    color: white;
  }

  #modify tr:nth-child(even)>td:nth-child(even) {
    background-color: rgba(9, 131, 9, 0.95);

  }

  #modify tr:nth-child(odd)>td:nth-child(odd) {
    background-color: rgb(207, 110, 19);

  }
</style>
<script>
  function onColPlus() {
    var tbl = document.getElementById('modify');
    rowcount = tbl.rows.length;
    colcount = tbl.rows[0].cells.length;
    for (i = 0; i < rowcount; i++) {
      tbl.rows[i].insertCell(0);
    }
  }

  function onColMinus() {
    var tbl = document.getElementById('modify');
    rowcount = tbl.rows.length;
    colcount = tbl.rows[0].cells.length;
    if (colcount == 2) {
      alert("You can't delete last two Columns!")
      return;
    }
    for (i = 0; i < rowcount; i++) {
      tbl.rows[i].deleteCell(0);
    }
  }

  function onRowPlus() {
    var tbl = document.getElementById('modify');
    rowcount = tbl.rows.length;
    colcount = tbl.rows[0].cells.length;

    var row = tbl.insertRow(-1);
    for (i = 0; i < colcount; i++) {
      row.insertCell(0);
    }
  }

  function onRowMinus() {
    var tbl = document.getElementById('modify');
    rowcount = tbl.rows.length;
    colcount = tbl.rows[0].cells.length;
    if (rowcount == 2) {
      alert("You can't delete last two Rows!")
      return;
    }
    tbl.deleteRow(rowcount - 1);
  }
</script>

<body>
  <h1>Rajnikumar Tank</h1>
  <h2>Employee Id:24DEV039</h2>
  <div style="display: flex;">

    <table id="modify">
      <tr class="tr1">
        <td></td>
        <td></td>
      </tr>
      <tr class="tr1">
        <td></td>
        <td></td>
      </tr>
    </table>
    <button class="btn" id="colPlus" onclick="onColPlus();">+</button>
    <button class="btn" id="colMinus" onClick="onColMinus();">-</button>
  </div>

  <button class="btn" id="rowPlus" onclick="onRowPlus()">+</button>
  <button class="btn" id="rowMinus" onclick="onRowMinus()">-</button>
</body>

</html>